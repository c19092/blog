extends layout

block content
  article.container
    a.backlink(href="/")
      i.fa-solid.fa-arrow-left
      |  Back to all posts
    header
      h1.heading= post.title
      div.info
        span= new Date(post.createdAt).toLocaleDateString()
        if post.tags && post.tags.length
          div.tags
            each tag in post.tags
              a.btn.btn-secondary(href=`/tag/${tag}`)= tag
    
    div.body !{post.body}
    
    div.actions
      a.btn(href=`/post/${post._id}/edit`) 
        i.fa-solid.fa-pen-to-square 
        | Edit
      form(action=`/post/${post._id}/delete` method="POST" style="display: inline;")
        button.btn(type="submit" onclick="return confirm('Are you sure you want to delete this post?')") 
          i.fa-solid.fa-trash
          | Delete
